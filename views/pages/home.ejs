

<!-- Landing Image -->
<header>
    <div class="container">
        <div class="row text-center">
            <div class="col-md-12">
                <h1 class="super-title">Get a job!</h1>
                <a href="#" class="btn btn-primary btn-lg landing-button">
                    <i class="fa fa-search fa-lg" aria-hidden="true"></i>
                    <span class="landing-button-text">Explore<span>
                </a>
                <a href="/job-form" class="btn btn-primary btn-lg landing-button">
                    <i class="fa fa-users fa-lg" aria-hidden="true"></i>
                    <span class="landing-button-text">Post a Job<span>
                </a>
                <p class="sub-text">
                    Currently <strong>48 teams</strong> in <strong>27 countries</strong><br> could use your help!
                </p>
            </div>
        </div>
    </div>
</header>

<!-- Featured Jobs -->
<section>
    <div class="container">
        <h2 class="section-title">Featured Jobs</h2>
        <div id="featuredJobs" class="container">

        <!-- Build page dynamically -->

        <% featuredJobs.forEach( function(element) {
            if (element.jobTitle && element.location){ %>
                <div class='col-md-4 feature-card'> 
                    <img src='/images/chingu.jpg' class='img-responsive'>
                        <h4 class='job-title'><%= element.jobTitle %></h4>
                        <p class='text-uppercase text-faded'><%= element.location %></p>
                </div>

            <% } %>
        <% }); %>

        </div>
        
        <div class="view-jobs">
            <a href="#" class="btn btn-success btn-lg text-uppercase">View all jobs</a>
        </div>
    </div>
</section>